<% @hosts_fullstack.each do |host| -%>
define host{
       use              generic-host
       host_name        <%= host %>
       alias            <%= host %>
       address          <%= host %><% unless host.include?(".") %>.<%= @default_host_domain %><% end %>
       hostgroups       all,fullstack,non_aws_host,frontends,not_pageable_servers,postgresql
       }
<% end -%>

